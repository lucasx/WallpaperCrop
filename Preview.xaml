<Window x:Class="WPF_WallpaperCrop_v2.Preview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_WallpaperCrop_v2"
        mc:Ignorable="d"
        Title="Preview" Height="300" Width="300" Loaded="Window_Loaded" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp">
    <Grid>
        <local:ZoomBorder x:Name="viewer" ClipToBounds="False" Background="Black">
            <Canvas HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image x:Name="image" SnapsToDevicePixels="True"/>
            </Canvas>
        </local:ZoomBorder>
    </Grid>
</Window>
